{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="form-group text-white text-center">
    <h1>Registreren</h1>
    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.username,{'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control'}}, {
            label: 'Password'
    }) }}
    <br>
    <button type="submit" class="btn btn-light">Registreer</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
