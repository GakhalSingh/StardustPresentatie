{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">{{ Room.name }}</h3>
            <h6 class="card-subtitle">{{ Room.size }} persoons kamer</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <br>
                    <div class="white-box text-center img-thumbnail"><img src="../{{ Room.image }}" class="img-fluid"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">{{ Room.name }}</h4>
                    <p>{{ Room.description }}</p>
                    <h2 class="mt-5">
                       € {{ Room.price }}
{#                        <small class="text-success">(25%off)</small>#}
                    </h2>
                    {{ form_start(form) }}
                    <button type="submit" class="btn btn-light">Book Nu</button>
                    {{ form_end(form) }}
                    <h3 class="box-title mt-5">Lorem Ipsum</h3>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-check text-success"></i>Iets over de kamer</li>
                        <li><i class="fa fa-check text-success"></i>Wat meer tekst</li>
                        <li><i class="fa fa-check text-success"></i>perfecte ruimte</li>
                    </ul>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Informatie</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                            <tr>
                                <td width="390">Adres</td>
                                <td>Stardust Hotel Elonstraat 420, 6969XD Muskville, planeet Mars </td>
                            </tr>
                            <tr>
                                <td>Kamer</td>
                                <td>Stardust Hotel | {{ Room.name }}</td>
                            </tr>
                            <tr>
                                <td>Kamer prijs</td>
                                <td>Per nacht € {{ Room.price }}</td>
                            </tr>
                            <tr>
                                <td>Kamer kan op slot</td>
                                <td>Ja</td>
                            <tr>
                                <td>Kamer heeft toilet</td>
                                <td>Ja</td>
                            </tr>
                            <tr>
                                <td>Kamer heeft opbergkist</td>
                                <td>Ja</td>
                            </tr>
                            <tr>
                                <td>Verdieping heeft lift</td>
                                <td>Ja</td>
                            </tr>
                            <tr>
                                <td>Kamer komt met gratis ontbijt</td>
                                <td>Ja</td>
                            </tr>
                            <tr>
                                <td>Kamer komt met gratis lunch</td>
                                <td>Nee</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <br>
{% endblock %}
