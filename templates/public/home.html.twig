{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="text-center text-white">Onze kamers</h3>
    <div class="row">
    {% for Room in Rooms %}
        <div class="col-sm-3">
            <div class="card" style="height:95%">
                <img src="{{ Room.image }}" class="card-img-top" alt="{{ Room.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ Room.name }}</h5>
                    <p class="card-text">{{ Room.description }}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Vanaf â‚¬{{ Room.price }}</small>
                </div>
                <a href="/booking/rooms/{{ Room.id }}" class="stretched-link"></a>
            </div>
            <br>
        </div>
    {% endfor %}
    </div>
{% endblock %}
